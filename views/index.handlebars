<div class="modal" id="saved" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><span id="num-articles"></span> articles were saved.</p>
            </div>

        </div>
    </div>
</div>
<div class="jumbotron">
    <h1 class="display-4">Find Articles to review and add comments</h1>
    <p class="lead">This is a simple interface for scraping new articles from XXX. You can save articles and add
        comments.</p>

</div>
<div class="modal" id="note-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="note-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" rows="15" id="note-body"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="save-changes" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="list-group">
    {{#if articles}}
    {{#each articles}}


    <li class="list-group-item"> <a href="{{link}}">
            {{title}}
        </a>
        <div class="d-flex justify-content-end">
            <button type="button" class="notes btn btn-outline-info btn-sm mx-3" data-id="{{_id}}">Notes</button>
            <button type="button" class="delete-article btn btn-outline-danger btn-sm" data-id="{{_id}}">Delete</button>
        </div>
    </li>
    {{/each}}
    {{else}}
    <p class="list-group-item">
        There are no saved articles.
    </p>
    {{/if}}
</div>