<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="">Scrappy Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="btn btn-outline-success my-2 mx-4 my-sm-0" id="scrape" href="/">Scrape<span
                        class="sr-only">(current)</span></a>
            </li>


        </ul>

    </div>
</nav>
<div class="modal" id="saved" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><span id="num-articles"></span> articles were saved.</p>
            </div>

        </div>
    </div>
</div>
<div class="jumbotron">
    <h1 class="display-4">Find Articles to review and add comments</h1>
    <p class="lead">This is a simple interface for scraping new articles from XXX. You can save articles and add
        comments.</p>

</div>

<div class="list-group">
    {{#if articles}}
    {{#each articles}}
    <a href="{{link}}" class="list-group-item list-group-item-action">
        {{title}}
    </a>
    {{/each}}
    {{else}}
    <p class="list-group-item list-group-item-action">
        There are no saved articles.
    </p>
    {{/if}}
</div>